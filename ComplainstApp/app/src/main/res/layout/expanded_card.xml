<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner"
    android:foregroundTint="#00FFFFFF"
    android:soundEffectsEnabled="true">

    <LinearLayout
        android:id="@+id/vertical"
        android:layout_width="350dp"
        android:layout_height="692dp"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ID"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Complaint ID:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        </LinearLayout>

        <TextView
            android:id="@+id/complaintID"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="1931672642"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Complaint Category:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/categoryBody"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Harassment"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Complaint Title:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titleBody"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="This guy harassing me"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/against"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Complaint Against:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/againstBody"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Firstname Lastname"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Complaint Details:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detailBody"
            android:layout_width="320dp"
            android:layout_height="176dp"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:text="This is example body text.This is example body text.This is example body text.This is example body text.This is example body text.This is example body text.This is example body text.This is example body text.This is example body text.This is example body text.This is example body text.This is example body text.This is example body text.This is example body text.This is example body text.This is example body text.This is example body text."
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/reviewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Complaint Reviewer:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reviewerBody"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Firstname Lastname"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/evidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Evidence:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/evidenceBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="EvidenceList" />

        <LinearLayout
            android:id="@+id/horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="40dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton2"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Complaint"
                android:textColor="#1C87DC" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButton2"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Complaint"
                android:textColor="#1C87DC" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
